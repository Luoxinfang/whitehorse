<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Somgle</title>
  <link rel="stylesheet" href="/css/reg.css"/>
</head>
<body ng-app="somgle">
<div class="reg-panel" ng-controller="regController as ctrl">
  <div class="nav">
    <a href="/login">《已有账号登陆</a>
    <a href="/">返回首页</a>
  </div>
  <div id="wrapper">
    <div class="sidebar">
      <div class="logo"></div>
    </div>
    <div class="main box-shadow">
      <div class="by-email">
        <h4>邮箱注册</h4>
        <form>
          <div class="form-group">
            <label for="reg-email" class="icon-email"></label>
            <input ng-model="email" type="text" id="reg-email" ng-change="ctrl.verifyEmail()"
                   placeholder="请输入邮箱"/>
            <div class="tip">{{ctrl.user.emailMsg}}</div>
          </div>

          <div class="form-group">
            <label for="reg-pwd" class="icon-pwd"></label>
            <input ng-model="password" type="password" id="reg-pwd" ng-change="ctrl.verifyPwd()"
                   placeholder="请输入密码"/>
            <div class="tip">{{ctrl.user.pwdMsg}}</div>
          </div>

          <div class="form-group">
            <label for="reg-nick-name" class="icon-nick-name"></label>
            <input ng-model="nickName" type="text" id="reg-nick-name" ng-change="ctrl.verifyNickName()"
                   placeholder="请输入昵称"/>
            <div class="tip">{{ctrl.user.nickNameMsg}}</div>
          </div>
          <button class="btn btn-primary lg" type="submit">确定</button>

        </form>
      </div>
      <div class="co-agent">
        <h4>第三方登陆</h4>
      </div>
    </div>
  </div>
</div>
<script src="/js/lib/angular.js"></script>
<script src="/js/lib/roy.js"></script>
<script src="/js/page/reg.js"></script>

</body>
</html>